/*
 *Write a Java method that takes an array of float values and determines if all the
numbers are different from each other (that is, they are distinct).
 */


import java.util.Scanner;

public class CheckDistinct {

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);
        System.out.println("Plese, enter the total of elements to store: ");
        while (!sc.hasNextInt()) {
            sc.nextLine();
            System.out.println("Wrong value.");
        }
        int total = sc.nextInt();

        float[] values = new float[total];

        System.out.println("Now, enter the " + total + " values to store");

        int control = 0;
        while (control < total) {
            while (!sc.hasNextFloat()) {
                sc.nextLine();
                System.out.println("Wrong value, try again");
            }
            values[control] = sc.nextFloat();
            control++;
        }
        
        System.out.println(checkDistinct(values));

    }

    static String checkDistinct(float[] x) {

        for (int i = 0; i < x.length - 1; i++) {
            for (int i1 = i + 1; i1 < x.length; i1++) {
                if (x[i] == x[i1]) {
                    return "They are not distinct";
                }
            }
        }

        return "They are distinct";
    }
}
